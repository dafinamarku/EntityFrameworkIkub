@model EntityFramework1Ikub.Models.Category
@{
  ViewBag.Title = "Delete";
}
<h2>Do you want to delete this category?</h2>
@using (Html.BeginForm("Delete", "Category", FormMethod.Post))
{
  @Html.HiddenFor(m=>m.CategoryID)
  <div class="container">
    <ul>
      <li>
        @Html.LabelFor(m => m.CategoryID):
        @Html.DisplayFor(m => m.CategoryID)
      </li>
      <li>
        @Html.LabelFor(m => m.CategoryName):
        @Html.DisplayFor(m => m.CategoryName)
      </li>
    </ul>

    <button type="submit" class="btn btn-success">Delete</button>
    @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-danger" })
  </div>
}


