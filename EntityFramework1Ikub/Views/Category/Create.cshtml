@model EntityFramework1Ikub.Models.Category
@{
    ViewBag.Title = "Create";
}

<h2>Create a new category</h2>

<div class="container">
  @using (Html.BeginForm("Create", "Category", FormMethod.Post))
  {
    <div class="form-row">
      <div class="col-md-6">
        @Html.LabelFor(m => m.CategoryName)
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        <br />
        @if (ViewBag.Message != null)
        {
          <div class="row text-danger">@ViewBag.Message</div><br />
        }
        <button type="submit" class="btn btn-success">Create</button>
        @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-danger" })
      </div>
    </div>

  }

</div>