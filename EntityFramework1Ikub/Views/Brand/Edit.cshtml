@model EntityFramework1Ikub.Models.Brand
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="container">
  @using (Html.BeginForm("Edit", "Brand", FormMethod.Post))
  {
    @Html.HiddenFor(m => m.BrandID)
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.BrandName)
        @Html.TextBoxFor(m => m.BrandName, new { @class = "form-control" })
        <br />
        @if (ViewBag.Message != null)
        {
          <div class="row text-danger">@ViewBag.Message</div><br />
        }
        <button type="submit" class="btn btn-success">Edit</button>
        @Html.ActionLink("Cancel", "Index", "Brand", new { @class = "btn btn-danger" })
      </div>
    </div>
  }

</div>
