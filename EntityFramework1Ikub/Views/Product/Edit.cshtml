@model EntityFramework1Ikub.Models.Product
@{
  ViewBag.Title = "Edit";
}

<h2>Edit @Model.ProductName</h2>

<div class="container">
  @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
  {
    @Html.HiddenFor(m => m.ProductID, new { @value = Model.ProductID })
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.ProductName)
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
      </div>
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.DateOfPurchase)
        <input type="date" class="form-control" id="DateOfPurchase" name="DateOfPurchase" placeholder="Date of Purchase" value="@Model.DateOfPurchase.Value.ToString("yyyy-MM-dd")">
      </div>
      <div class="form-group col-md-6">
        <label for="AvailabilityStatus">Availability Status</label>
        <select class="form-control" id="AvailabilityStatus" name="AvailabilityStatus">
          @if (Model.AvailabilityStatus == "InStock")
          {
            <option value="InStock" selected="selected">In Stock</option>
            <option value="OutOfStock">Out of Stock</option>
          }
          else
          {
            <option value="InStock">In Stock</option>
            <option value="OutOfStock" selected="selected">Out of Stock</option>
          }
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.CategoryID, ViewBag.Categories as SelectList, htmlAttributes: new { @class = "form-control" })
      </div>
      <div class="form-group col-md-6">
        @Html.LabelFor(m => m.Brand)
        @Html.DropDownListFor(m => m.BrandID, ViewBag.Brands as SelectList, htmlAttributes: new { @class = "form-control" })
      </div>
    </div>
    <div class="form-row">
      <div class="form-group">
        <div class="form-check">
          @if (Model.Active == true)
          {
            <input class="form-check-input" type="checkbox" id="Active" name="Active" value="true" checked="checked">
          }
          else
          {
            <input class="form-check-input" type="checkbox" id="Active" name="Active" value="true">
          }
          @Html.LabelFor(m => m.Active)
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-success">Edit</button>
    @Html.ActionLink("Cancel", "ListOfProducts", "Product", new { @class = "btn btn-danger" })
  }
</div>

